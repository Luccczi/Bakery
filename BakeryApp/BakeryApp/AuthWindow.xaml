<Window x:Class="BakeryApp.AuthWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BakeryApp"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="353*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" FontSize="30" FontWeight="Bold" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Button Content="Войти" Click="btnEnter_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Width="130" Background="#FF4FC2FF" Margin="0,0,0,60"/>
            <TextBox x:Name="tbLogin" materialDesign:HintAssist.Hint="Введите логин"  ToolTip="Введите логин" HorizontalAlignment="Center" VerticalAlignment="Top" Width="315" Margin="0,123,0,0"/>
        <PasswordBox x:Name="pbPass" materialDesign:HintAssist.Hint="Введите пароль"  ToolTip="Введите пароль" HorizontalAlignment="Center" VerticalAlignment="Center" Width="316"/>
    </Grid>
</Window>
